{%- comment -%}
  Enhanced skip navigation links for better accessibility
  Provides keyboard users with quick navigation options
{%- endcomment -%}

<nav class="skip-links" aria-label="Skip navigation">
  <a href="#MainContent" class="skip-to-content-link">
    {{ 'accessibility.skip_to_text' | t }}
  </a>
  {% if template != 'index' %}
    <a href="#shopify-section-header" class="skip-to-content-link">
      {{ 'accessibility.skip_to_navigation' | t | default: 'Skip to navigation' }}
    </a>
  {% endif %}
  {% if template contains 'product' %}
    <a href="#product-info" class="skip-to-content-link">
      {{ 'accessibility.skip_to_product_info' | t | default: 'Skip to product information' }}
    </a>
  {% endif %}
  {% unless template == 'index' %}
    <a href="#shopify-section-footer" class="skip-to-content-link">
      {{ 'accessibility.skip_to_footer' | t | default: 'Skip to footer' }}
    </a>
  {% endunless %}
</nav>

<style>
  .skip-links .skip-to-content-link {
    position: absolute;
    overflow: hidden;
    height: 1px;
    left: -99999px;
    word-wrap: normal !important;
    background: var(--color-background);
    color: var(--color-foreground);
    padding: 1rem 1.5rem;
    text-decoration: none;
    font-weight: 600;
    border-radius: 0 0 0.5rem 0.5rem;
    border: 2px solid var(--color-primary);
    border-top: none;
  }

  .skip-links .skip-to-content-link:focus {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 9999;
    height: auto;
    overflow: visible;
    transform: translateY(0);
    transition: transform 0.2s ease-in-out;
  }

  .skip-links .skip-to-content-link:focus:hover {
    background: var(--color-primary);
    color: var(--color-background);
  }
</style>
